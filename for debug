    printf("\n6. \"Show the output\" type question solution (2069-2080)\n");

    wrongInput:

    printf("\n\nEnter the category number to go to that section: ");

    scanf("%d",&choice);

    //debug the input if user enter string then it go for Infiniti loop

    switch(choice)

    {

    case 1:

         system("cls");

        quesPast();

        break;

    case 2:

         system("cls");

        repeatQuestPastYear();

        break;

    case 3:

         system("cls");

      //paliFiboArm();

