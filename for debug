           printf("5");

    //   consolRun();

           break; */

    case 6:

            //system("cls");

           //printf("6");

           //showOutputQuest();

           break;

    default:

        printf("Invalid Input!\n");

        printf("Choose number between 1-6\n\n");

        goto wrongInput;

        break;

    }

    return 0;

}

