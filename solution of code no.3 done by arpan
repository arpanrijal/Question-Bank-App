//palindrome Fibonacci Armstrong questions and solution function

void paliFiboArm()

{

    char opt,armopt,decision;

    int nth_fib, n1th_fib, checkPrime,ath_fib; // for n==3

    int num,n1,n2,numarm,z=0,series,count=0,temp,temp1,rem;  // for n==2 and n==1

    int numArm,exc,inc=0,rem5,checkArm,p; // for n==4

start:

    clrscr();

    printf("Questions is here from 1 to .. and enter category");

palfibarmhome:

    clrscr();

    printf("\n\nFor source code enter \"s\" for program execution enter \"p\": ");

    scanf(" %c",&opt);

    clrscr();

    switch(opt)

    {

    case 's':

selectquest:

        printf("Questions source code is here!!");

        printf("\n\nPress \"c\" to continue, press \"b\" to go to home screen and press \"e\" to exit the program: ");

        scanf(" %c",&decision);

        if(decision=='c')

        {

            goto selectquest;

        }

        if(decision=='e')

        {

            clrscr();

            printf("Exiting....");

            exit(0);

        }

        if(decision=='b')

        {

            clrscr();

            main();

            break;

        }

    case 'p':

        printf("Questions from 1 to upto..... \n");

        printf("\n\nEnter question number of that code: ");

        scanf("%d",&num);

        //pali fibo arm question start by arpan!!

        if(num==1)

        {

            clrscr();

            printf("Generate fibonacci series<500\n\n");

            printf("Enter first number: ");

            scanf("%d",&n1);

            printf("Enter second number: ");

            scanf("%d",&n2);

            series=n1+n2;

            while(series<500)

            {

                if(series<500)

                {

                    printf("%d, ",series);

                    n1=n2;

                    n2=series;

                    series=n1+n2;

                }

                else

                {

                    printf("Series is greater that 500");

                    break;

                }

            }

            printf("\n\nEnter \"m\" for this section main menu or \"h\" for homescreen\n enter any character to exit the program: ");

            scanf(" %c",&armopt);

            if(armopt=='m')

            {

                clrscr();

                goto start;

            }

            else if(armopt=='h')

            {

                clrscr();

                main();

            }

            else

            {

                clrscr();

                printf("Exiting...");

                exit(0);

            }

            break;

        }

        else if(num==2)

        {

            printf("**Check given number is Armstrong or not**\n\n");

            printf("Enter number: ");

            scanf("%d",&numarm);

            temp=numarm;

            while(temp!=0)

            {

                temp=temp/10;

                count++;

            }

            temp1=numarm;

            while(temp1!=0)

            {

                rem=temp1%10;

                z=z+pow(rem,count);

                temp1=temp1/10;

            }

            if(z==numarm)

            {

                printf("%d not equal to %d is Armstrong number!",z,numarm);

            }

            else

            {

                printf("%d not equal to %d so it isn't Armstrong number!",z,numarm);

            }

            printf("\n\n\Enter \"m\" for this section main menu or \"h\" for homescreen\n enter any character to exit the program: ");

            scanf(" %c",&armopt); //we need to use address & to store character so it can be used in if.

            if(armopt=='m')

            {

                clrscr();

                goto start;

            }

            else if(armopt=='h')

            {

                clrscr();

                main();

            }

            else

            {

                clrscr();

                printf("Exiting....");

                exit(0);

            }

            break;

        }

        else if(num==3)

        {

            clrscr();

            printf("Find prime or not for fibonacci nth series!");

            printf("Find prime or not for fibonacci nth series!\n\n");

            printf("Enter 1th number: ");

            scanf("%d",&ath_fib);

            printf("Enter 2th number: ");

            scanf("%d",&n1th_fib);

            printf("Enter nth number: ");

            scanf("%d",&nth_fib);

            seriesgen(ath_fib,n1th_fib, nth_fib);

            checkPrime=prime(nth_fib);

            if(checkPrime==1)

            {

                printf("Composite!");

            }

            else

            {

                printf("Prime!");

            }

            

            printf("\n\n\Enter \"m\" for this section main menu or \"h\" for homescreen\n enter any character to exit the program: ");

            scanf(" %c",&armopt); //we need to use address & to store character so it can be used in if.

            if(armopt=='m')

            {

                clrscr();

                goto start;

            }

            else if(armopt=='h')

            {

                clrscr();

                main();

            }

            else

            {

                clrscr();

                printf("Exiting....");

                exit(0);

            }

        }

        else if(num==4)

        {

            //

            //

            //

            //

            //   printf("string is palindrome or not!!!!!!");

            //

            //

            //

            //

            //

            //

        }

        else if(num==5)

        {

            printf("Check Armstrong number or not using recursive function\n\n");

            printf("Enter number: ");

            scanf("%d",&numArm);

            exc=numArm;

            while(exc!=0)

            {

                inc++;

                exc=exc/10;

            }

            checkArm=arm(numArm,inc);

            if(checkArm==numArm)

            {

                printf("%d is Armstrong number!",checkArm);

            }

            else

            {

                printf("%d isn't Armstrong number!",checkArm);

            }

            

            printf("\n\n\Enter \"m\" for this section main menu or \"h\" for homescreen\n enter any character to exit the program: ");

            scanf(" %c",&armopt); //we need to use address & to store character so it can be used in if.

            if(armopt=='m')

            {

                clrscr();

                goto start;

            }

            else if(armopt=='h')

            {

                clrscr();

                main();

            }

            else

            {

                clrscr();

                printf("Exiting....");

                exit(0);

            }

        }

        //pali arm fibo question done by arpan!!

        break;

    default:

        printf("\n\nInvalid Input");

        goto palfibarmhome;

        break;

    }

}

//sub function call for series of fibonacci nth term

//main function is in n==3 if statemet.

//sub function call for series of fibonacci nth term.

void seriesgen(int x,int y,int z)

{

    int sum, temp11,e=z;

    sum=x+y;

    temp11=x;

    while(sum<=e)

    {

        printf("%d, ",sum);

        x=y;

        y=sum;

        sum=x+y;

    }

}

//end of sub function call for series of fibonacci nth term.

