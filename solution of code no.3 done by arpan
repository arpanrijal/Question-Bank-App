//main function is in n==3 if statemet.

// sub function call for check  prime .

int prime(int nth_fib)

{

    int i;

    for(i=2; i<nth_fib; i++)

    {

        if(nth_fib%i==0)

        {

            return 1;

        }

    }

}

// end of sub function call for check  prime .

//main function is in n==3 if statemet

//******************************************

//start of sub function of else if(num==5)

int arm(int x, int p)

{

    int rem5;

    rem5=x%10;

    if(x==0)

    {

        return 0;

    }

      return pow(rem5,p)+arm(x/10,p);

}

//end of sub function of else if(num==5)

    
