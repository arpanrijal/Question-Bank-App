        {

        }
        else if(sourCod==10)
        {

        }
        else if(sourCod==11)
        {

        }
        else if(sourCod==12)
        {

        }
        else
        {
            printf("Invalid Input please enter num between 1-12!");
            goto startshowoutput;
        }
        break;
    default:
        printf("Enter \"e\" for execution of code and \"s\" for source code");
        goto topOfCode;

    }

}





